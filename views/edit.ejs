<%- include('./layouts/header.ejs') %>

<body>
<section >
<div class="container mt-5">
    <h2>Edit Country: <%= country.name %></h2>
    <form action="/api/countries/<%= country._id %>" method="POST">
        <!-- Méthode POST pour la mise à jour, en utilisant method-override pour PATCH -->
        <input type="hidden" name="_method" value="PATCH"> <!-- Champ caché pour PATCH -->

        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= country.name %>" required>
        </div>

        <div class="mb-3">
            <label for="capital" class="form-label">Capital</label>
            <input type="text" class="form-control" id="capital" name="capital" value="<%= country.capital %>" required>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3" required><%= country.description %></textarea>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input type="url" class="form-control" id="image" name="image" value="<%= country.image %>" required>
        </div>

        <button type="submit" class="btn btn-primary">Update Country</button>
        <a href="/" class="btn btn-secondary">Cancel</a> <!-- Lien pour annuler et revenir à la page d'accueil -->
    </form>
</div>
    
</section> 

<script src="/script/script.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
 