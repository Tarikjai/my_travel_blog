<%- include('./layouts/header.ejs') %>
<section class="section-container">
     
    <div class="container">
        <!-- Title section -->
        <div class="title">Enter the information</div>
        <div class="content">
          <!-- Registration form -->
          <form action="/api/countries" method="post">
            <div class="user-details">
              <!-- Input for Full Name -->
              <!-- <div class="input-box">
                <span class="details">Country Name</span>
                <input type="text" placeholder="Enter the country name" required name="name">
              </div> -->
              <div class="input-box">
                <span class="details">Country Name</span>
                <select id="country-select" required name="name">
                    <option value="" disabled selected>Select a country</option>
                </select>
            </div>
              <!-- Input for Username -->
              <div class="input-box">
                <span class="details">Capital</span>
                <input type="text" placeholder="Enter the Capital name" required name="capital">
              </div>
              <!-- Input for Email -->
              <div class="input-box">
                <span class="details">Description</span>
                 
                <textarea placeholder="Enter your description" required rows="4" style="width: 100%; height: 100px;" name="description"></textarea>
              </div>
            <!-- Input for PhotoLink -->
              <div class="input-box">
                <span class="details">Photo</span>
                <input type="text" placeholder="Enter the photo link" required name="image">
              </div>
           
      
            <!-- Submit button -->
            <div class="button">
              <input type="submit" value="Submit">
            </div>
          </form>
        </div>
      </div>
    
    
</section> 
<script src="/script/script.js"></script>
</body>
<%- include('./layouts/footer.ejs') %>
</html>