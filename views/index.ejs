<%- include('./layouts/header.ejs') %>


<section id="blog">
    <div class="blog-heading">
        <!--Heading-->
        <span>My Recent Post</span>
        <h3>My Blog</h3>
    </div>
    <!--blog-container-->
    <div class="blog-container">
        <% countries.forEach(function(country) { %>
        <!-- Box 1-->
        <div class="blog-box">
            <!-- img -->
            <div class="blog-img">
                <img src="<%= country.image %>" alt="blog">
            </div>

            <!-- text -->
             <div class="blog-text">
                <span><%= country.createdAt.toLocaleDateString(); %></span>
                <a href="#" class="blog-title"><%= country.name %></a>
                <p><%= country.description %></p>
                <a href="/country/<%= country.id %>">Read More</a>
            </div>
        </div>
        <% }); %>
       
    </div>
</section>

